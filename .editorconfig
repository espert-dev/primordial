[*]
charset = utf-8
indent_style = tab
indent_size = tab
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# The extensions out and err are used by approval tests, where we need
# exact reproducibility. Unset all formats from [*].
[{*.in,*.out,*.err}]
charset = unset
indent_size = unset
indent_style = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
max_line_length = unset
